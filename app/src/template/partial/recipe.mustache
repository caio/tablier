<div class="box">
    <article class="media">
        <div class="media-content">
            <div class="content">
                <p><strong><a href="{{ href }}" title="{{ name }}">{{ name }}</a></strong> <small>{{ site }}</small>
                {{#description}}
                <br>{{ . }}
                {{/description}}
                </p>
            </div>
            <div class="level is-mobile">
                <div class="level-left">
                </div>
                <div class="level-right">
                    {{#meta}}
                    <p class="level-item is-size-7">
                        {{ value }} {{ name }}
                    </p>
                    {{/meta}}
                </div>
            </div>
        </div>
    </article>
</div>
