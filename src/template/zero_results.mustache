<!DOCTYPE html>
<html lang="en">
<head>
{{> partial/head }}
</head>
<body>
    <section class="hero">
        <div class="hero-head">
            {{> partial/nav }}
        </div>
    </section>

    <section class="hero is-info">
        <div class="hero-body">
            <div class="container has-text-centered" id="try_again">
                <h1 class="title">
                    {{ search_title }}
                </h1>
                <h2 class="subtitle">
                    {{ search_subtitle }}
                </h2>
                {{> partial/search_form }}
            </div>
        </div>
    </section>

    <section class="section" id="results">
        <div class="columns is-multiline is-centered">
            <div class="column is-full">
                <div class="container has-text-centered">
                    <h1 class="title">
                        Search Results
                    </h1>
                    <h2 class="subtitle">
                        Couldn't find any recipe matching your search :(
                    </h2>
                    <p><a href="#try_again">Try changing your query?</a></p>
                </div>
            </div>
        </div>
    </section>

{{> partial/js_bottom }}
</body>
</html>
